<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardElevation="6dp"
                                    style="@style/AppCardView"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <ImageView
            android:id="@+id/civ_head"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_recommend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/civ_head"
            android:layout_alignTop="@id/civ_head"
            android:layout_marginTop="8dp"
            android:text="马思纯"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/font_black"/>
        <ImageView
            android:id="@+id/iv_recommend_sex"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/civ_head"
            android:layout_alignBottom="@id/civ_head"
            android:src="@mipmap/girl"/>
        <TextView
            android:id="@+id/tv_similarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="95%"
            android:textSize="@dimen/font_big"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_similarity"
            android:layout_marginRight="4dp"
            android:text="路线相似度"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/colorPrimary"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>