<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">
    <android.support.v7.widget.CardView
        android:id="@+id/chat_content_image_card"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/chat_content_friend_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/friend_text_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/chat_content_image_card"
        android:layout_marginLeft="5dp"
        app:cardBackgroundColor="@color/background_tab_pressed"
        app:cardUseCompatPadding="true">
        <TextView
            android:id="@+id/friend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:minHeight="20dp"
            android:maxWidth="200dp"
            android:padding="10dp"
             />
    </android.support.v7.widget.CardView>

</RelativeLayout>